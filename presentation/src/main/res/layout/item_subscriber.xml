<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_subscriber_avatar"
            style="@style/SubscriberItemAvatarImageView"
            android:layout_width="@dimen/subscriber_item_height"
            android:layout_height="@dimen/subscriber_item_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_subscriber_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_hub_black"/>

        <TextView
            android:id="@+id/tv_subscriber_login"
            style="@style/SubscriberItemLoginTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_subscriber_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="RxJava"/>

    </android.support.constraint.ConstraintLayout>

</merge>
